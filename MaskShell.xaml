<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        x:Class="Globe.QcApp.MaskShell"
        Title="MaskWindow"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Topmost="False" 
        SizeToContent="Manual"
        AllowsTransparency="True"
        Background="{x:Null}"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary/SystemDictionary.xaml" />
                <ResourceDictionary Source="ResourceDictionary/ToolBarDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal" >
            <Image Source="Images/logo.ico" Stretch="UniformToFill"/>
            <TextBlock Text="蕲春三维地理信息展示系统" FontSize="36" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" FontFamily="Microsoft YaHei UI Light"/>
        </StackPanel>
        <!--飞行路径窗口-->
        <Grid Name="PanelRegion" Grid.Row="1" Width="300" Height="400" Margin="0,0,3,3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Button.Click="StackPanel_Click">
                <Button Name="StartRoute" Style="{StaticResource StartRouteButtonStyle}"/>
                <Button Name="PauseRoute" Style="{StaticResource PauseRouteButtonStyle}"/>
                <Button Name="StopRoute" Style="{StaticResource StopRouteButtonStyle}"/>
            </StackPanel>
            <Border Grid.Row="1" HorizontalAlignment="Stretch" Background="#7FFFFFFF" BorderThickness="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="#99000000" BorderThickness="0,0,0,1" Background="#9977A12A"/>
                    <Button Name="ControlPanelButton" Grid.Row="0" Grid.Column="0" Content="-" VerticalAlignment="Center" HorizontalAlignment="Left" Width="24" Height="24" Margin="3,3,3,3" BorderThickness="0"
                        Click="ControlPanelButton_Click"/>

                    <TextBlock Name="ShowPanelTitle" Grid.Row="0" Text="漫游飞行" HorizontalAlignment="Center" Foreground="White" FontSize="16" FontFamily="Microsoft YaHei UI Light" VerticalAlignment="Center" Margin="4"/>
                    <Border Name="PanelContentRegion" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="1">
                        <telerik:RadListBox Name="RouteListBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderThickness="0" Background="{x:Null}" ItemTemplate="{StaticResource ListBoxItemTemplate}" SelectionChanged="RouteListBox_SelectionChanged" />
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Button.Click="StackPanel_Click" Background="{StaticResource ToolBarBgColor}">
            <Button Name="ZoomIn" Style="{StaticResource ZoomInButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>场景放大</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="ZoomOut" Style="{StaticResource ZoomOutButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>场景缩小</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="FullExent" Style="{StaticResource FullExtentButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>场景全幅</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="Stop" Style="{StaticResource StopButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>场景停止</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="FlyRoute" Style="{StaticResource FlyButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>漫游飞行</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="SearchLocation" Style="{StaticResource MapQueryButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>查询定位</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="FullScreen" Style="{StaticResource FullButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>全屏显示</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Name="ExitSystem" Style="{StaticResource CloseButtonStyle}">
                <Button.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <TextBlock>退出系统</TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
